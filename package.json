{
  "name": "cortex",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @cortex/api dev",
    "dev:web": "pnpm --filter @cortex/web dev",
    "dev:mcp": "pnpm --filter @cortex/mcp dev",
    "build": "pnpm -r build",
    "build:mcp": "pnpm --filter @cortex/mcp build",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @cortex/api test",
    "test:mcp": "pnpm --filter @cortex/mcp test",
    "test:web": "pnpm --filter @cortex/web test"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
